-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th <a href="title_sorted", id="title_header">Movie Title</a>, movie_path(title_sorted), :sorted => true
      %th Rating
      %th <a href="release_date_sorted", id="release_date_header">Release Date</a>
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
